{
  "compilerOptions": {
    "target": "esnext",
    "module": "es2015",
    "baseUrl": "./src",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./lib",
    "allowJs": true,
    "lib": [
      "dom"
    ],
    "paths": {
      "rsg-components/*": ["client/rsg-components/*"]
  }
  },
  // Remove the 'include' section if we want entire project to be Typescript.
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}
