{
  "compilerOptions": {
    "target": "esnext",
    "module": "es2015",
    "jsx": "react",
    "moduleResolution": "node",
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowSyntheticDefaultImports": true,
    "declarationDir": "types",
    // TODO: Remove 'allowJs' once all files are converted to TS.
    // This is required now, for accessing types and to do typechecking for JS files.
    "allowJs": true
  },
  // Remove the 'include' section if we want entire project to be Typescript.
  "include": [
    "src"
  ]
}
