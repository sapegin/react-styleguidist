{
  "name": "react-styleguidist",
  "private": true,
  "description": "React components style guide generator",
  "version": "0.0.0-development",
  "homepage": "https://github.com/styleguidist/react-styleguidist",
  "author": {
    "name": "Artem Sapegin",
    "url": "http://sapegin.me/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/styleguidist/react-styleguidist.git"
  },
  "bugs": {
    "url": "https://github.com/styleguidist/react-styleguidist/issues"
  },
  "license": "MIT",
  "main": "scripts/index.js",
  "bin": {
    "styleguidist": "packages/react-styleguidist/lib/bin/styleguidist.js"
  },
  "files": [
    "lib",
    "templates"
  ],
  "engines": {
    "node": ">=6",
    "npm": ">=3"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0",
    "@babel/core": "^7.0.0",
    "@babel/plugin-proposal-class-properties": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/preset-flow": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^9.0.0",
    "babel-jest": "^23.4.2",
    "babel-loader": "^8.0.0",
    "cheerio": "^1.0.0-rc.2",
    "css-loader": "^0.28.11",
    "dog-names": "^1.0.2",
    "enzyme": "^3.4.1",
    "enzyme-adapter-react-16": "^1.2.0",
    "enzyme-to-json": "^3.3.4",
    "eslint": "^5.4.0",
    "eslint-config-tamia": "^6.0.2",
    "eslint-plugin-compat": "^2.5.1",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-react": "^7.11.1",
    "file-loader": "^1.1.11",
    "flow-bin": "^0.80.0",
    "husky": "^0.14.3",
    "jest": "^23.5.0",
    "jest-serializer-html": "^5.0.0",
    "keymirror": "^0.1.1",
    "lerna": "^3.3.0",
    "lint-staged": "^7.2.0",
    "prettier": "1.14.2",
    "raf": "^3.4.0",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "react-test-renderer": "^16.4.1",
    "strip-shebang": "^1.0.2",
    "style-loader": "^0.21.0",
    "url-loader": "^1.0.1",
    "webpack-cli": "^2.0.13"
  },
  "scripts": {
    "pretest": "npm run lint",
    "test": "npm run test:jest",
    "posttest": "npm run format",
    "test:jest": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "start": "node packages/react-styleguidist/lib/bin/styleguidist.js server --config examples/basic/styleguide.config.js",
    "start:customised": "node packages/react-styleguidist/lib/bin/styleguidist.js server --config examples/customised/styleguide.config.js",
    "start:sections": "node packages/react-styleguidist/lib/bin/styleguidist.js server --config examples/sections/styleguide.config.js",
    "start:ui": "node packages/react-styleguidist/lib/bin/styleguidist.js server",
    "lint": "eslint . --cache --fix",
    "flow": "flow",
    "compile": "babel --delete-dir-on-start --ignore '**/*.spec.js','**/__tests__','**/__mocks__' -d packages/react-styleguidist/lib/ packages/react-styleguidist/src/",
    "compile:watch": "npm run compile -- --watch",
    "prepublishOnly": "npm run compile",
    "build:basic": "node packages/react-styleguidist/lib/bin/styleguidist.js build --config examples/basic/styleguide.config.js",
    "build:customised": "node packages/react-styleguidist/lib/bin/styleguidist.js build --config examples/customised/styleguide.config.js",
    "build:sections": "node packages/react-styleguidist/lib/bin/styleguidist.js build --config examples/sections/styleguide.config.js",
    "test:browser:pre": "npm i --no-save puppeteer",
    "test:browser:basic": "node test/browser.js examples/basic/styleguide/index.html",
    "test:browser:customised": "node test/browser.js examples/customised/styleguide/index.html",
    "test:browser:sections": "node test/browser.js examples/sections/styleguide/index.html",
    "precommit": "lint-staged",
    "format": "prettier --write '**/*.{js,md,css}'",
    "postinstall": "lerna bootstrap --hoist && node -e \"console.log('\\u001b[32mLove Styleguidist? Support us on the Open Collective:\\u001b[22m\\u001b[39m\\n > \\u001b[96m\\u001b[1mhttps://opencollective.com/styleguidist\\u001b[0m\\n')\" || exit 0",
    "test:cypress:pre": "npm i --no-save cypress@3.0.2 wait-on",
    "test:cypress:open": "cypress open",
    "test:cypress:run": "cypress run",
    "test:cypress:startServer": "node test/run.server.js",
    "test:cypress:startServer:post": "wait-on http://localhost:8082"
  },
  "jest": {
    "testURL": "http://localhost/",
    "setupFiles": [
      "./test/raf-polyfill.js",
      "./test/jestsetup.js"
    ],
    "modulePaths": [
      "./packages/react-styleguidist/src/client"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/packages/react-styleguidist/lib/",
      "<rootDir>/examples/",
      "<rootDir>/test/"
    ],
    "coveragePathIgnorePatterns": [
      "<rootDir>/packages/react-styleguidist/src/scripts/server.js",
      "<rootDir>/packages/react-styleguidist/src/scripts/build.js"
    ],
    "snapshotSerializers": [
      "deabsdeep/serializer",
      "enzyme-to-json/serializer",
      "jest-serializer-html"
    ]
  },
  "keywords": [
    "react",
    "jsx",
    "styleguide",
    "style guide",
    "documentation",
    "docs",
    "generator",
    "component",
    "components"
  ],
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ],
    "*.css": [
      "prettier --write",
      "git add"
    ],
    "*.md": [
      "prettier --write",
      "git add"
    ]
  }
}
